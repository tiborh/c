#include <stdio.h>

#define DEBUG 0

char* to_binary(long);

int main(int argc, char** argv)
{
  if (argc < 2)
    printf("Give me a positive integer as an argument.\n");
  else
    {
      long the_number;
      sscanf(argv[1],"%ld",&the_number);
      printf("The binary representation of %ld is %s.\n",the_number,to_binary(the_number));
    }
    
  return 0;
}

char* to_binary(long in_num)
{
  char* bin_str = NULL;

  return bin_str;
}
